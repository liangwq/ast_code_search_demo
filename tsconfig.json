{  
  "compilerOptions": {  
    "target": "ES2020",  
    "module": "CommonJS",  
    "lib": ["ES2020", "DOM"],  // 添加 DOM 支持
    "declaration": true,  
    "outDir": "./dist",  
    "rootDir": "./src",
    "strict": true,  
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true  
  },  
  "include": ["src/**/*"],  
  "exclude": ["node_modules", "dist", "tests"]  
}